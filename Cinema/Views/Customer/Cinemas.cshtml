@model PaginatedList<Cinema.ViewModels.Customers.CinemasViewModel>

<partial name="_NavbarPartial" />
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<link href="~/css/customer-table.css" rel="stylesheet" />
<section class="main-section hero-section d-flex justify-content-center align-items-start" id="section_1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="pagination">
                    <li class="page-item @prevDisabled">
                        <a asp-action="Cinemas"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-all="@(TempData["All"])"
                           class="btn btn-default page-link @prevDisabled">
                            Previous
                        </a>
                    </li>
                    <li class="page-item @nextDisabled">
                        <a asp-action="Cinemas"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-all="@(TempData["All"])"
                           class="btn btn-default page-link @nextDisabled">
                            Next
                        </a>
                    </li>
                </ul>
                <div class="table-wrap">
                    <table class="table table-responsive-xl">
                        <thead>
                            <tr>
                                <th>&nbsp;</th>
                                <th>Name</th>
                                <th>Owner</th>
                                <th>Description</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cinema in Model)
                            {
                                <tr class="alert bg-white" role="alert">
                                    <td>
                                    </td>
                                    <td class="d-flex align-items-center gap-3">
                                        <div class="img">
                                            <img src="~/client-images/Cinemas/@cinema.ImageUrl" />
                                        </div>
                                        <div class="pl-3 email">
                                            <span>@cinema.Name</span>
                                            <span>Founded: @cinema.FoundedOn</span>
                                        </div>
                                    </td>
                                    <td>@cinema.Owner</td>
                                    <td class="status">
                                        <span class="active">
                                            @cinema.Description
                                        </span>
                                    </td>
                                    <td style="width: 20%;">
                                        @if (!cinema.IsInFavorites)
                                        {
                                            <form asp-controller="Customer" asp-action="AddCinemaToFavorites">
                                                <button class="add-button" type="submit" asp-controller="Customer" asp-action="AddCinemaToFavorites" asp-route-id="@cinema.Id">Add cinema to favorites</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-controller="Customer" asp-action="RemoveCinemaFromFavorites">
                                                <button class="remove-button mt-3" type="submit" asp-controller="Customer" asp-action="RemoveCinemaFromFavorites" asp-route-id="@cinema.Id">Remove cinema from favorites</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>