@model Cinema.ViewModels.Customers.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<partial name="_NavbarPartial" />
<link href="~/css/layoutstyle.css" rel="stylesheet" />
<link href="~/css/loginRegisterStyle.css" rel="stylesheet" />
<section class="main-section hero-section d-flex justify-content-center align-items-center" id="section_1">
    <div class="row justify-content-center home-sections">
        <div class="container login-container">
            <h2 class="login-title">Change password</h2>
            <form class="login-form" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div role="list" id="validationSummary" asp-validation-summary="All" class="text-danger" hidden></div>
                <div class="form-group">
                    <div class="active-form">
                        <label asp-for="OldPassword"></label>
                        <input asp-for="OldPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="active-form">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="active-form">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="btn btn--form mt-2 px-3 py-1" type="submit" value="Change password">
                    Change password
                </button>
            </form>
        </div>
    </div>
</section>
<style>
    section.main-section {
        flex-wrap: wrap;
        row-gap: 20px;
    }

    div.cinema-section {
        width: 100%;
    }

    div.home-sections {
        padding: 0px 30px;
    }

    div.custom-block.custom-block-overlay {
        min-height: 350px;
        max-height: 100px;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
