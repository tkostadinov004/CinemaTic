                                    <div class="seats-line">
                                        <span>21</span>
                                        <span class="right-seat">31</span>
                                    </div>
                                    <a class="sector" asp-controller="Tickets" asp-action="Create" asp-route-sector="C" asp-route-movieId="@Model.Movie.Id">C</a>
                                </div>
                            </div>
                            <div class="sector-line">
                                <div class="sector-box">
                                    <a class="sector" asp-controller="Tickets" asp-action="Create" asp-route-sector="D" asp-route-movieId="@Model.Movie.Id">D</a>
                                </div>
