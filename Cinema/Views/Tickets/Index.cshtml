@model IEnumerable<Cinema.Data.Models.Ticket>

@{
    ViewData["Title"] = (User.IsInRole("Owner") ? "Tickets" : "Your tickets");
}

<link href="~/css/cardStyle.css" rel="stylesheet" />
<div class="moviesContainer flex-column front-panel">
    @if (User.IsInRole("Owner"))
    {
        <h1>Tickets</h1>
    }
    else
    {
        <h1>Your tickets</h1>
    }
    <table class="rwd-table">
        <tbody>
            <tr>
                <th>Movie</th>
                <th>Date</th>
                <th>Price</th>
                <th>Seat number</th>
            </tr>
            @if (Model.Count() > 0)
            {
                @foreach (var ticket in Model)
                {
                    <tr class="owner">
                        <td>
                            <div class="movie-table-info">
                                <div>@ticket.Movie.Title</div>
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@ticket.Movie.Id"><b>See more</b></a>
                            </div>
                        </td>
                        <td>
                            @ticket.ForDate.ToString("dd.MM.yyyy")
                        </td>
                        <td>
                            @ticket.Price
                        </td>
                        <td>
                            @ticket.Seat.SeatNumber
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="owner">
                    <td colspan="4" style="text-align: center;">
                        <b>No tickets!</b>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>