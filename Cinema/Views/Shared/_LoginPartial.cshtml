@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
     {
        var currentUser = UserManager.Users.FirstOrDefault(user => user.Email == User.Identity.Name);

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @currentUser.FirstName @currentUser.LastName!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Visitors" asp-action="Index">Visitors</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Genres" asp-action="Index">Genres</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Actors" asp-action="Index">Actors</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index">Movies</a>
    </li>
</ul>