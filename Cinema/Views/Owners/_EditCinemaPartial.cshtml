@model Cinema.ViewModels.Cinemas.EditCinemaViewModel

<form asp-controller="Owners" asp-action="EditCinema" method="post" enctype="multipart/form-data" class="edit-form">
    <div role="list" asp-validation-summary="None" class="text-danger"></div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-film input-icon"></i>
            <input asp-for="Name" class="form-control form-style" placeholder="Your cinema's name" />
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-pen input-icon"></i>
            <input asp-for="Description" class="form-control form-style" placeholder="Description" />
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-calendar-days input-icon"></i>
            <input asp-for="FoundedOn" type="text" class="form-control form-style" placeholder="Date of creation" onfocus="(this.type = 'date')" onblur="(this.type = 'text')" />
        </div>
        <span asp-validation-for="FoundedOn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="input-icon">R</i>
            <input asp-for="SeatRows" type="text" class="form-control form-style" placeholder="Rows" />
        </div>
        <span asp-validation-for="SeatRows" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <div class="active-form">
            <i class="input-icon">C</i>
            <input asp-for="SeatCols" type="text" class="form-control form-style" placeholder="Columns" />
        </div>
        <span asp-validation-for="SeatCols" class="text-danger"></span>
    </div>
    <div class="form-group image-form-group">
        <div class="d-flex justify-content-between">
            <div class="active-form image-upload">
                <label asp-for="Image" for="image-upload" class="image-upload-box">
                    <i class="upload-text">Upload your cinema's logo</i>
                </label>
                <input asp-for="Image" id="image-upload" class="form-control form-style upload-form" onchange="loadFile(event)" />
            </div>
            <div class="temp-img-container">
                <img id="tempImg" hidden />
            </div>
        </div>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button class="app-content-headerButton" asp-controller="Owners" asp-action="EditCinema" asp-route-cinemaId="@Model.Id">Add a cinema</button>
</form>