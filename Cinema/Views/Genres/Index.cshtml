@model IEnumerable<Cinema.Data.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<link href="~/css/cardStyle.css" rel="stylesheet" />
<div class="moviesContainer flex-column front-panel">
    <h1>Genres</h1>
    <table class="rwd-table">
        <tbody>
            <tr>
                <th>Genre name</th>
                <th>Movies count</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var genre in Model)
            {
                <tr class="owner">
                    <td>
                        @genre.Name
                    </td>
                    <td>
                        @genre.Movies.Count
                    </td>
                    <td>
                        <a asp-controller="Genres" asp-action="Details" asp-route-id="@genre.Id"><b>Movies</b></a>
                    </td>
                    <td>
                        <a asp-controller="Genres" asp-action="Delete" asp-route-id="@genre.Id">
                            <i class="fa-solid fa-circle-xmark f-color-size-b"></i>
                            Remove
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Genres" asp-action="Edit" asp-route-id="@genre.Id">
                            <i class="fa-solid fa-pencil"></i>
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="nx-btn front-panel" asp-controller="Genres" asp-action="Create">Add a new genre</a>
</div>
