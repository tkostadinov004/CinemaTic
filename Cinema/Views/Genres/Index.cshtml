@model IEnumerable<Cinema.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/cardStyle.css" rel="stylesheet" />
<div class="moviesContainer flex-column front-panel">
    <h1>Жанрове</h1>
    <table class="rwd-table">
        <tbody>
            <tr>
                <th>Име на жанра</th>
                <th>Брой филми</th>
            </tr>
            @foreach (var genre in Model)
            {
                <tr class="owner">
                    <td>
                        @genre.BulgarianName
                    </td>
                    <td>
                        @genre.Movies.Count
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
