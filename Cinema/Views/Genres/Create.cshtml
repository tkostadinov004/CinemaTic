@model Cinema.Models.Genre

@{
    ViewData["Title"] = "Add a new genre";
}

<link href="~/css/loginRegisterStyle.css" rel="stylesheet" />
<section class="front-panel">
    <div class="row">
        <h1>Add a new genre</h1>
        <div class="col-md-4">
            <form class="account" asp-controller="Genres" asp-action="Create" method="post">
                <hr class="section-line" />
                <div class="text-fields">
                    <div role="list" asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="active-form">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="nx-btn primary">Add</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
