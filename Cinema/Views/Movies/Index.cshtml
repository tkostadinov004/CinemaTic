@model IEnumerable<Cinema.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (!User.IsInRole("Owner"))
{
    <div style="display:flex; flex-direction: row;">
        <form asp-controller="Movies" asp-action="Index">
            <a class="btn btn-primary" asp-route-date="@DateTime.Today">Днес</a>
        </form>
        <form asp-controller="Movies" asp-action="Index">
            <a class="btn btn-primary" asp-route-date="@DateTime.Today.AddDays(1)">Утре</a>
        </form>
        @for (int i = 2; i <= 7; i++)
        {
            DateTime date = DateTime.Today.AddDays(i);

            <form asp-controller="Movies" asp-action="Index">
                <a class="btn btn-primary" asp-route-date="@date">@date.ToString("dd.MM.yyyy")</a>
            </form>
        }
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var date = item.Date.ToString("dd.MM.yyyy");
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.BulgarianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @foreach (var actor in item.Actors)
                {
                    <p>@actor.Actor.FirstName</p>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="SetRating" asp-route-id="@item.Id">Set rating</a>
            </td>
        </tr>
        }
    </tbody>
</table>
