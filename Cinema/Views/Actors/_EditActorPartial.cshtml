@model Cinema.ViewModels.Actors.EditActorViewModel

<form id="create-form" asp-controller="Actors" asp-action="EditActor" method="post" enctype="multipart/form-data" class="edit-form">
    <input type="hidden" asp-for="Id" />
    <div role="list" asp-validation-summary="None" class="text-danger"></div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-film input-icon"></i>
            <input asp-for="FullName" class="form-control form-style" placeholder="Full name" />
        </div>
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-pen input-icon"></i>
            <input asp-for="Birthdate" type="text" class="form-control form-style" placeholder="Date of birth" onfocus="(this.type = 'date')" onblur="(this.type = 'text')" />
        </div>
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-pen input-icon"></i>
            <select asp-for="Nationality" asp-items="@Model.Countries" class="form-control form-style dropdown-select" placeholder="Nationality">
                <option disabled selected>-Select a country-</option>
            </select>
        </div>
        <span asp-validation-for="Nationality" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-calendar-days input-icon"></i>
            <input asp-for="Rating" type="text" class="form-control form-style" placeholder="Rating" />
        </div>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group image-form-group">
        <div class="d-flex justify-content-between">
            <div class="active-form image-upload">
                <label asp-for="Image" for="image-upload" class="image-upload-box">
                    <i class="upload-text">Upload an actor's image'</i>
                </label>
                <input asp-for="Image" id="image-upload" class="form-control form-style upload-form" onchange="loadFile(event)" />
            </div>
            <div class="temp-img-container">
                <img id="tempImg" hidden />
            </div>
        </div>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button class="app-content-headerButton" asp-controller="Actors" asp-action="EditActor">Edit actor</button>
</form>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>