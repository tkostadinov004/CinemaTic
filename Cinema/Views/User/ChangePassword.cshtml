@model Cinema.ViewModels.Users.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

@if(User.IsInRole("Customer"))
{
    <partial name="_NavbarPartial" />
    <link href="~/css/layoutstyle.css" rel="stylesheet" />
    <link href="~/css/loginRegisterStyle.css" rel="stylesheet" />
    <section class="main-section hero-section d-flex justify-content-center align-items-center" id="section_1">
        <div class="row justify-content-center home-sections">
            <div class="container login-container">
                <h2 class="login-title">Change password</h2>
                <form asp-controller="User" asp-action="ChangePassword" class="login-form" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Email" />

                    <div role="list" id="validationSummary" asp-validation-summary="All" class="text-danger" hidden></div>
                    <div class="form-group">
                        <div class="active-form">
                            <label asp-for="OldPassword"></label>
                            <input asp-for="OldPassword" class="form-control" />
                        </div>
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="active-form">
                            <label asp-for="NewPassword"></label>
                            <input asp-for="NewPassword" class="form-control" />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="active-form">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button asp-controller="User" asp-action="ChangePassword" class="btn btn--form mt-2 px-3 py-1" type="submit" value="Change password">
                        Change password
                    </button>
                </form>
            </div>
        </div>
    </section>
    <style>
        section.main-section {
            flex-wrap: wrap;
            row-gap: 20px;
        }

        div.cinema-section {
            width: 100%;
        }

        div.home-sections {
            padding: 0px 30px;
        }

        div.custom-block.custom-block-overlay {
            min-height: 350px;
            max-height: 100px;
        }
    </style>
}
else
{
    <link href="~/css/manageStyle.css" rel="stylesheet" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <div class="app-content">
        <div class="app-content-header">
            <h1 class="app-content-headerText">Change password</h1>
            <button class="mode-switch" title="Switch Theme">
                <svg class="moon" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" width="24" height="24" viewBox="0 0 24 24">
                    <defs></defs>
                    <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
                </svg>
            </button>
        </div>
        <div class="create-form">
            <form asp-controller="User" asp-action="ChangePassword" class="login-form" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div role="list" id="validationSummary" asp-validation-summary="All" class="text-danger" hidden></div>
                <div class="form-group">
                    <div class="active-form">
                        <i class="fa-solid fa-lock input-icon"></i>
                        <input asp-for="OldPassword" class="form-control form-style" placeholder="Old password" />
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="active-form">
                        <i class="fa-solid fa-key input-icon"></i>
                        <input asp-for="NewPassword" class="form-control form-style" placeholder="New password" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="active-form">
                        <i class="fa-solid fa-key input-icon"></i>
                        <input asp-for="ConfirmPassword" class="form-control form-style" placeholder="Confirm password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button asp-controller="User" asp-action="ChangePassword" class="app-content-headerButton mt-3" type="submit" value="Change password">
                    Change password
                </button>
            </form>
        </div>
    </div>
    <script src="~/js/ownerdashboard.js"></script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
