@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/loginRegisterStyle.css" />

<section class="front-panel">
    <form class="account" method="post">
        <h4>Log in your CinemaTic account!</h4>
        <hr class="section-line" />
        <div class="text-fields" id="inputs">
            <div role="list" id="validationSummary" asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="active-form">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="active-form">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" type="checkbox" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="nx-btn primary">Login</button>
        </div>
        <div class="form-group">
            <p>
                <a id="forgot-password" class="hover-link" asp-page="./ForgotPassword">Forgot password?</a>
            </p>
            <p>
                <a class="hover-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Register now!</a>
            </p>
        </div>
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
