@model CinemaTic.ViewModels.Movies.EditCinemaMovieDataViewModel

<h5 class="text-center mb-5 crud-header">Edit date range and ticket price</h5>
<form asp-controller="Movies" asp-action="EditCinemaMovieData" method="post" class="add-form">
    <input type="hidden" asp-for="@Model.CinemaId" />
    <input type="hidden" asp-for="@Model.MovieId" />
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-calendar-days input-icon"></i>
            <input asp-for="@Model.FromDate" value="@(Model.FromDate.ToString(Constants.DateTimeFormat))" type="text" class="form-control form-style" placeholder="From date" onfocus="(this.type = 'date')" onblur="(this.type = 'text')" />
        </div>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-calendar-days input-icon"></i>
            <input asp-for="@Model.ToDate" value="@(Model.ToDate.ToString(Constants.DateTimeFormat))" type="text" class="form-control form-style" placeholder="To date" onfocus="(this.type = 'date')" onblur="(this.type = 'text')" />
        </div>
    </div>
    <div class="form-group">
        <div class="active-form">
            <i class="fa-solid fa-dollar-sign input-icon"></i>
            <input asp-for="@Model.TicketPrice" type="text" class="form-control form-style" placeholder="Ticket price" />
        </div>
    </div>
    <button class="app-content-headerButton mt-3" asp-controller="Movies" asp-action="EditCinemaMovieData" type="submit">Edit cinema-movie relation data</button>
</form>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>