@model PaginatedList<CinemaTic.ViewModels.Admin.AdminAllCinemasViewModel>

@foreach (var cinema in Model)
{
    <div class="cinema-row info-cinema">
        <button class="cell-more-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-vertical"><circle cx="12" cy="12" r="1" /><circle cx="12" cy="5" r="1" /><circle cx="12" cy="19" r="1" /></svg>
        </button>
        <div class="cinema-cell image">
            <a class="d-flex align-items-center cinema-link" asp-controller="Admin" asp-action="Cinema" asp-route-id="@cinema.Id">
                <img src="~/client-images/Cinemas/@cinema.ImageUrl" alt="cinema-logo">
                <span>@cinema.Name</span>
            </a>
        </div>
        <div class="cinema-cell status-cell">
            <span class="cell-label">Status:</span>
            <span class="status">@cinema.Status</span>
        </div>
        <div class="cinema-cell sales"><span class="cell-label">Added on:</span>@cinema.AddedOn</div>
        <div class="cinema-cell added-by"><span class="cell-label">Added by:</span>
            <a asp-controller="Admin" asp-action="User" asp-route-userId="@cinema.AddedById">@cinema.AddedBy</a>
        </div>
    </div>
}
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<ul class="pagination gap-1">
    <li class="page-item">
        <a class="action-button active previous @prevDisabled">
            Previous
        </a>
    </li>
    <li class="page-item">
        <a class="action-button active next @nextDisabled">
            Next
        </a>
    </li>
</ul>
<script>
    document.querySelectorAll('.page-item a').forEach(i => i.addEventListener("click", function () {
        if (i.classList.contains("previous")) {
            page = page - 1;
        }
        else if (i.classList.contains("next")) {
            page = page + 1;
        }
        getItems('Admin', 'SearchAndFilterCinemas', search.value, '', (filterOptions ? filterOptions.value : null), (activeSort ? activeSort.id : null), page);
    }));
</script>