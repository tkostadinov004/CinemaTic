@model CinemaTic.ViewModels.Admin.AdminUserCRUDViewModel

<div class="delete-cinema-form d-flex justify-content-center align-items-center">
    <div class="delete-text d-flex flex-column">
        <h5>Are you sure you want to delete this user's account?</h5>
        <form asp-controller="Admin" asp-action="DeleteUserAccount" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="active-form flex-column align-items-start">
                    <div class="user-container">
                        <i class="fa-solid fa-film input-icon"></i>
                        <span class="px-2">@Model.FullName</span>
                    </div>
                    <span class="px-2">(@Model.UserName)</span>
                </div>
            </div>
            <button type="submit" class="app-content-headerButton bg-danger" asp-controller="Admin" asp-action="DeleteUserAccount">Delete</button>
        </form>
    </div>
</div>