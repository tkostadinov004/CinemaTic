@model CinemaTic.ViewModels.Cinemas.CinemaPagePreviewViewModel
<link href="~/css/cardstyle.css" rel="stylesheet" />
<link href="~/css/cinemas.css" rel="stylesheet" />
<link href="~/css/search-dropdown.css" rel="stylesheet" />
<div class="main-cinema-container">
    <nav>
        <div class="col-xl-12 d-flex justify-content-between align-items-center">
            <a id="logo-link" href="#">
                <img id="cinema-logo" src="~/client-images/Cinemas/@Model.CinemaLogoUrl" />
            </a>
            <div class="d-flex align-items-center gap-5">
                <div class="d-flex flex-column align-items-center">
                    <img id="profile-picture" src="~/client-images/defaults/man-avatar-profile-picture-vector-illustration_268834-538-removebg-preview.png" />
                    <a href="#" class="text-white">Your account</a>
                </div>
                <button onclick="history.back()" class="button active">
                    Go Back
                </button>
            </div>
        </div>
    </nav>
    <div class="main">
        <img src="~/client-images/defaults/martin-martz-ZUj-wUCw0u4-unsplash.png" class="bg-image" />
        <div class="main-container pt-5">
            <div class="col-xl-12 text-white">
                <h5 class="text-center text-white">Top movies, recommended by our sponsors: </h5>
            </div>
            <div class="movie-grid d-flex justify-content-center gap-3 mt-5" style="width: 100%;">
                <div class="card-wrapper">
                    <div class="card">
                        <img src="~/client-images/Movies/Batman.jpg" alt="cinema-logo">
                        <div class="descriptions">
                            <div class="description-buttons">
                                <a class="desc-button">
                                    <i class="fa-solid fa-circle-info f-size-b"></i>
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-wrapper">
                    <div class="card">
                        <img src="~/client-images/Movies/Kingsman-The-Secret-Service.jpg" alt="cinema-logo">
                        <div class="descriptions">
                            <div class="description-buttons">
                                <a class="desc-button">
                                    <i class="fa-solid fa-circle-info f-size-b"></i>
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-wrapper">
                    <div class="card">
                        <img src="~/client-images/Movies/AllAboutEve.jpg" alt="cinema-logo">
                        <div class="descriptions">
                            <div class="description-buttons">
                                <a class="desc-button">
                                    <i class="fa-solid fa-circle-info f-size-b"></i>
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-12 mt-5 dates-container">
                <div class="row d-flex justify-content-between align-items-center">
                    <span>Book tickets</span>
                    <div class="d-flex selection-buttons">
                        <button class="active" id="movie-grid-button">Movie grid</button>
                        <div class="dropdown">
                            <button class="dropbtn" tabindex="0">
                                By movie
                                <i class="fa-solid fa-arrow-down"></i>
                            </button>
                            <div class="dropdown-content dropdown-input">
                                <input type="text" placeholder="Search.." id="input-search" />
                                <div class="items d-flex flex-column">
                                    <div>
                                        <button class="movie-item">Batman</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">Body of Lies</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">Daddy's Home</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">Django Unchained</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">Kingsman: The Secret Service</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">The Departed</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">The Equalizer</button>
                                    </div>
                                    <div>
                                        <button class="movie-item">Wrath of Man</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <button class="date active">Today</button>
                    @foreach (var item in Model.Dates.Skip(1))
                    {
                        <button class="date" for-date="@item.Value">@item.Key</button>
                    }
                </div>
            </div>
            <section class="movies-list">
                <div class="gradient-box" style=""></div>
                <div class="dates-info-container">
                    <div id="movie-grid">
                        <div class="movie d-flex gap-5">
                            <img src="~/client-images/Movies/Batman.jpg" />
                            <div class="movie-info d-flex justify-content-start align-items-start flex-column gap-2">
                                <h5>Batman</h5>
                                <div class="d-flex genre-time flex-column">
                                    <span>Action</span>
                                    <span>126 minutes</span>
                                </div>
                                <div class="d-flex flex-wrap gap-2">
                                    <button class="time-button">10:10 AM</button>
                                </div>
                            </div>
                        </div>
                        <div class="movie d-flex gap-5">
                            <img src="~/client-images/Movies/Body-of-Lies.jpg" />
                            <div class="movie-info d-flex justify-content-start align-items-start flex-column gap-2">
                                <h5>Body of Lies</h5>
                                <div class="d-flex genre-time flex-column">
                                    <span>Action, Thriller</span>
                                    <span>128 minutes</span>
                                </div>
                                <div class="d-flex flex-wrap gap-2">
                                    <button class="time-button">3:30 PM</button>
                                    <button class="time-button">6:20 PM</button>
                                    <button class="time-button">8:50 PM</button>
                                </div>
                            </div>
                        </div>
                        <div class="movie d-flex gap-5">
                            <img src="~/client-images/Movies/Kingsman-The-Secret-Service.jpg" />
                            <div class="movie-info d-flex justify-content-start align-items-start flex-column gap-2">
                                <h5>Kingsman: The Secret Service</h5>
                                <div class="d-flex genre-time flex-column">
                                    <span>Action, Comedy</span>
                                    <span>129 minutes</span>
                                </div>
                                <div class="d-flex flex-wrap gap-2">
                                    <button class="time-button">9:00 AM</button>
                                    <button class="time-button">2:00 PM</button>
                                </div>
                            </div>
                        </div>
                        <div class="movie d-flex gap-5">
                            <img src="~/client-images/Movies/The-Departed.jpg" />
                            <div class="movie-info d-flex justify-content-start align-items-start flex-column gap-2">
                                <h5>The Departed</h5>
                                <div class="d-flex genre-time flex-column">
                                    <span>Crime, Thriller</span>
                                    <span>151 minutes</span>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="time-button">9:00 PM</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="by-movie" hidden>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="~/js/cinemas.js"></script>
<script src="~/js/search-dropdown.js"></script>
<script>
    document.querySelector(".sidebar").setAttribute("hidden", "true");
    changeColors('@Model.BackgroundColor', '@Model.BoardColor', '@Model.TextColor', '@Model.ButtonBackgroundColor', '@Model.ButtonTextColor', '@Model.AccentColor');
</script>