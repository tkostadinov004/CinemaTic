@model CinemaTic.ViewModels.Actors.DeleteActorViewModel

<form asp-area="Owner" asp-controller="Actors" asp-action="Delete" method="post" enctype="multipart/form-data" class="delete-cinema-form d-flex justify-content-center align-items-center">
   <div class="delete-text d-flex flex-column">
        <h5>Are you sure you want to delete this actor?</h5>
        <div class="form-group">
            <div class="active-form">
                <i class="fa-solid fa-film input-icon"></i>
                <span class="px-2">@Model.FullName</span>
            </div>
        </div>
        <button class="app-content-headerButton" asp-area="Owner" asp-controller="Actors" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
   </div>
    <div class="delete-image form-group mx-0">
        <img src="~/client-images/Actors/@Model.ImageUrl"/>
    </div>
</form>