@model CinemaTic.ViewModels.Actors.CreateActorViewModel

@{
    ViewData["Title"] = "Add a new actor";
}
<link href="~/css/manage-dashboard.css" rel="stylesheet" />
<link href="~/css/search-dropdown.css" rel="stylesheet" />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<div class="app-content">
    <div class="app-content-header">
        <h1 class="app-content-headerText">Add an actor</h1>
        <button class="mode-switch" title="Switch Theme">
            <svg class="moon" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" width="24" height="24" viewBox="0 0 24 24">
                <defs></defs>
                <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
            </svg>
        </button>
    </div>
    <div class="create-form">
        <form asp-area="Owner" asp-controller="Actors" asp-action="Add" method="post" enctype="multipart/form-data" class="add-form">
            <div role="list" asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <div class="active-form">
                    <i class="fa-solid fa-film input-icon"></i>
                    <input asp-for="FullName" class="form-control form-style" placeholder="Full name" />
                </div>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="active-form">
                    <i class="fa-solid fa-pen input-icon"></i>
                    <select asp-for="Nationality" asp-items="@Model.Countries" class="form-control form-style dropdown-select" placeholder="Nationality">
                        <option disabled selected>-Select a country-</option>
                    </select>
                </div>
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="active-form">
                    <i class="fa-solid fa-calendar-days input-icon"></i>
                    <input asp-for="Birthdate" type="text" class="form-control form-style" placeholder="Birthdate" onfocus="(this.type = 'date')" onblur="(this.type = 'text')" />
                </div>
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="active-form">
                    <i class="input-icon">R</i>
                    <input asp-for="Rating" type="text" class="form-control form-style" placeholder="IMDb rating" />
                </div>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group image-form-group mt-4">
                <div class="d-flex justify-content-between">
                    <div class="active-form image-upload">
                        <label asp-for="Image" for="image-upload" class="image-upload-box">
                            <i class="upload-text">Upload an actor image</i>
                        </label>
                        <input asp-for="Image" id="image-upload" class="form-control form-style upload-form" onchange="loadFile(event)" />
                    </div>
                    <div class="temp-img-container">
                        <img id="tempImg" hidden />
                    </div>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button class="app-content-headerButton" asp-area="Owner" asp-controller="Actors" asp-action="Add">Add actor</button>
        </form>
    </div>
</div>
<script src="~/js/dashboard.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}